<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimary</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="s" parent="Theme.AppCompat.Dialog.Alert">
        <!--<item name="windowTitleStyle">@style/DialogWindowTitle.DeviceDefault</item>-->
        <!--<item name="android:windowBackground">@android:color/transparent</item>-->
        <!-- Color palette -->
        <item name="colorPrimary">#ff212121</item>
        <item name="colorPrimaryDark">#ff000000</item>
        <item name="colorAccent">#ff80cbc4</item>
        <item name="textAllCaps">false</item>
        <item name="android:background">#ffffff</item>
        <item name="android:textColor">#ff212121</item>
        <item name="android:amPmTextColor">#ff212121</item>
        <item name="android:actionMenuTextColor">#ff212121</item>
        <item name="android:centerColor">#ff212121</item>
        <item name="android:color">#ff212121</item>
        <item name="android:calendarTextColor">#ff212121</item>
        <item name="android:titleTextColor" tools:ignore="NewApi">#ff212121</item>

    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

